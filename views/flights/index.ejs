<%- include('../partials/header') %>
<table class="list">
  <thead class="item1">
    <tr>
      <th>Airline</th>
      <th>Flight no</th>
      <th>Departure</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="item2">
    <% flight.forEach(function(m) { %>
      <tr>
        
        <% var d = new Date();%>
        <%if (m.departs < d){%>
          <td class="passedDate"><%= m.airline %></td>
          <td class="passedDate"><%= m.flightNo %></td>
          <td class="passedDate"><%= m.departs %></td>
          <%}else{%>
        <td><%= m.airline %></td>
        <td><%= m.flightNo %></td>
        <td><%= m.departs %></td>
        <%}%>
        <td><a href="/flights/<%= m._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>
